{
  "temporal_config": {
    "name": "Temporal Dataset Generator",
    "description": "Configuration for multi-month customer lifecycle datasets with realistic behavioral patterns",
    "version": "1.0",
    
    "base_config_path": "template_config.json",
    
    "temporal_params": {
      "initial_customers": 1000,
      "monthly_new_customers": 50,
      "num_months": 12,
      "start_month": "2024-07",
      "output_dir": "temporal_datasets",
      "customer_state_tracking": true,
      "attrition_memory_months": 3
    },
    
    "lifecycle_behavior": {
      "monthly_attrition_rate": 0.025,
      "new_customer_protection_months": 2,
      "loyal_customer_retention_bonus": 0.5,
      "seasonal_effects": {
        "enabled": true,
        "high_attrition_months": [1, 6, 12],
        "low_attrition_months": [3, 9],
        "effect_strength": 0.3
      }
    },
    
    "behavioral_evolution": {
      "login_activity": {
        "degradation_rate": 0.15,
        "improvement_rate": 0.05,
        "volatility": 0.1,
        "pre_departure_increase": 2.0,
        "memory_months": 3
      },
      "spending_patterns": {
        "retention_increase_rate": 0.1,
        "departure_reduction_rate": 0.25,
        "volatility": 0.2,
        "loyalty_threshold": 6
      },
      "engagement_score": {
        "departure_signal_threshold": 0.5
      }
    },
    
    "customer_segments": {
      "high_value": {
        "percentage": 0.15,
        "spend_threshold": 200,
        "retention_bonus": 0.7,
        "product_count_min": 5,
        "engagement_boost": 1.5
      },
      "new_customer": {
        "percentage": 0.20,
        "protection_months": 3,
        "initial_protection_factor": 0.8,
        "onboarding_bonus": 1.2
      },
      "loyal": {
        "percentage": 0.25,
        "tenure_threshold_months": 12,
        "retention_rate_bonus": 0.6,
        "satisfaction_boost": 1.3
      }
    },
    
    "risk_prediction_features": {
      "leading_indicators": [
        {
          "feature": "login_frequency_decline",
          "lookback_months": 2,
          "threshold_change": -0.4,
          "weight": 0.8
        },
        {
          "feature": "spend_reduction",
          "lookback_months": 3,
          "threshold_change": -0.3,
          "weight": 0.7
        },
        {
          "feature": "support_ticket_increase",
          "lookback_months": 1,
          "threshold_change": 0.5,
          "weight": 0.6
        },
        {
          "feature": "satisfaction_decline",
          "lookback_months": 2,
          "threshold_change": -0.3,
          "weight": 0.9
        }
      ],
      "composite_scoring": {
        "method": "weighted_average",
        "normalization": "min_max",
        "output_range": [0, 1]
      }
    },
    
    "temporal_columns": [
      {
        "name": "MONTH_ID",
        "type": "string",
        "description": "Month identifier (YYYY-MM format)",
        "generation_method": "temporal_sequence",
        "required": true
      },
      {
        "name": "CUSTOMER_STATUS",
        "type": "string",
        "description": "Current customer status: active, inactive, departed",
        "generation_method": "lifecycle_based",
        "choices": ["active", "inactive", "departed"]
      },
      {
        "name": "MONTHS_SINCE_SIGNUP",
        "type": "int",
        "description": "Number of months since customer signup",
        "generation_method": "calculated_temporal"
      },
      {
        "name": "DELETION_DATE",
        "type": "date",
        "description": "Account deletion date",
        "generation_method": "conditional",
        "nullable": true,
        "description": "Deletion dates only appear when customer departs"
      },
      {
        "name": "PREVIOUS_MONTH_LOGIN_ACTIVITY",
        "type": "float",
        "description": "Login activity in the previous month",
        "generation_method": "temporal_evolution",
        "applies_to": "continuing_customers"
      },
      {
        "name": "SATISFACTION_TREND",
        "type": "string",
        "description": "Satisfaction trend: improving, stable, declining",
        "generation_method": "trend_analysis",
        "choices": ["improving", "stable", "declining"]
      },
      {
        "name": "LIFECYCLE_STAGE",
        "type": "string",
        "description": "Current lifecycle stage: new, growing, mature, at_risk, departed",
        "generation_method": "lifecycle_classification"
      },
      {
        "name": "RISK_PROBABILITY_SCORE",
        "type": "float",
        "description": "ML-ready risk probability score (0-1)",
        "generation_method": "ml_scoring",
        "range": [0, 1]
      }
    ],
    
    "output_settings": {
      "file_naming": {
        "pattern": "temporal_dataset_{month}.csv",
        "include_summary": true
      },
      "verification": {
        "include_risk_analysis": true,
        "customer_journey_tracking": true
      }
    },
    
    "validation_rules": [
      {
        "check": "realistic_attrition_rates",
        "description": "Monthly attrition rates should be between 1-5%",
        "min_rate": 0.01,
        "max_rate": 0.05
      },
      {
        "check": "customer_count_growth",
        "description": "Net customer growth should be positive or stable",
        "min_growth_rate": -0.1
      },
      {
        "check": "lifecycle_distribution",
        "description": "Customer lifecycle stages should follow realistic distribution",
        "expected_distribution": {
          "new": [0.1, 0.3],
          "growing": [0.2, 0.4],
          "mature": [0.3, 0.5],
          "at_risk": [0.05, 0.15],
          "departed": [0.02, 0.08]
        }
      }
    ]
  }
} 